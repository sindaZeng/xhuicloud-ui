{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "useDefineForClassFields": true,
    // 生成.d.ts文件
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "isolatedModules": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["types/*"],
      "~/store/*": ["./src/store/modules/*"]
    },
    "types": ["@intlify/vite-plugin-vue-i18n/client"]
  },
  // 读取文件
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types"],
  "exclude": ["node_modules"]
}
