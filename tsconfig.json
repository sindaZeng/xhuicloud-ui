{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "isolatedModules": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "types": ["@intlify/vite-plugin-vue-i18n/client"],
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["types/*"]
    }
  },
  // 读取文件
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.ts",
    "types/*.d.ts",
    "vite.config.ts",
    "node_modules/element-plus/global.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
